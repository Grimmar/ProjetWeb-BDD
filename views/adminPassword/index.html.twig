{% extends "admin.html.twig" %}

{% block title %}
{{ parent() }} - Admin
{% endblock %}

{% block stylesheets %}
{{ parent() }}
<script type="text/javascript" src="{{WEBROOT}}templates/js/login.js"></script>
{% endblock %}

{% block contentTitle %}Changement du mot de passe administrateur{% endblock %}     
{% block content %}
<form action="{{WEBROOT}}adminPassword/updateProccess" method="post" name="update" onsubmit='javascript:submit_passConfirm("update");'>
    <input type='hidden' name='md5' />
    <input type='hidden' name='md5Confirm' />
    <label>Mot de passe</label><input type="password" name="password" value="" required/> <br/>
    <label>Confirmation Mot de passe</label><input type="password" name="passwordConfirm" value="" required/><br/>
    <input type="submit" value="Enregistrer"/>
</form>
<div class="erreur">
    <h3 style="color : red;">{{erreur}}</h3>
</div>
<div class="ok">
    <h3 style="color : green;">{{ok}}</h3>
</div>
{% endblock %}