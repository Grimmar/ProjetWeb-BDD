{% extends "main.html.twig" %}

{% block title %}
Authentification
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
<link rel="stylesheet" type="text/css" href="{{WEBROOT}}templates/css/login.css"/>
<script type="text/javascript" src="{{WEBROOT}}templates/js/login.js"></script>
{% endblock %}

{% block body %}
    <h1 id="connexion">Connexion</h1>

    <section class="{% block classNotifs %}error{% endblock %}">
    {% block notifications %}
        {% if messages is not null %}
             {% for m in messages %}  
        <p><b>{{m}}</b></p>
             {% endfor %}
        {% endif %}
    {% endblock %}
    </section>

    <h3 class="erreur">{{erreur}}</h3>
    <form action="{{WEBROOT}}login/process" method="post" id="formLogin" onsubmit='javascript:submit_pass("formLogin");'>
        <input type='hidden' name='md5' />
        <input type="text" name="login" id="login" placeholder="Login" autofocus 
               required value="{% if login is not null %} {{login}} {%endif %}"/>
        <br/>
        <input type="password" name="password" id="password" placeholder="Mot de passe" required/>
        <br/>
        <input type="submit" value="Connexion"/>
    </form>
{% endblock %}