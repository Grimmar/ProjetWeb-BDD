{% extends "admin.html.twig" %}

{% block stylesheets %}
{{ parent() }}
<link rel="stylesheet" href="{{WEBROOT}}templates/js/jPages/css/jPages.css">
<script type="text/javascript" src="{{WEBROOT}}templates/js/jPages/js/jPages.js"></script>
<script type="text/javascript">
    $(function(){
        $("div.holder").jPages({
            containerID : "itemContainer",
            previous: "précédent",
            next: "suivant",
            perPage: 10
        });
    });
    </script>
{% endblock %}

{% block contentTitle %}Liste des patients{% endblock %}    
    
{% block content %}
    {%if patients != NULL %}
        <div class="holder"></div>
        <table class="zebra">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Téléphone</th>
                <th>Date de naissance</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="itemContainer">
            {% for m in patients %}
            <tr>
                <td>{{m.nom}}</td>
                <td>{{m.prenom}}</td>
                <td>{{m.telephone}}</td>
                <td>{{m.dateNaissance}}</td>
                <td>
                    <a href="{{WEBROOT}}patient/view/{{m.matricule}}">Details</a>
                    <a href="{{WEBROOT}}patient/update/{{m.matricule}}">Modifier</a>
                    <a href="{{WEBROOT}}patient/delete/{{m.matricule}}" onclick="return confirm('Voulez-vous vraiment supprimer ce patient?');">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
            
        </table>
    {% else %}
        Il n'y a aucun patient enregistr&eacute;
    {% endif %}
{% endblock %}