{% extends "admin.html.twig" %}

{% block title %}
{{ parent() }} - Patient
{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}

{% block header %}
{{parent()}}
{% endblock %}

{% block body %}

{% block menu %}
{{ parent() }}
{% endblock %}
<div class="content">
    <h2>Liste des patients</h2>
{%if patients != NULL %}
<table>
    <tr><th>Nom</th><th>Prenom</th><th>Actions</th></tr>
    {% for m in patients %}
    <tr><td>{{m.nom}}</td><td>{{m.prenom}}</td><td>
                    <a href="{{WEBROOT}}patient/view/{{m.matricule}}">Details</a>
                    <a href="{{WEBROOT}}patient/update/{{m.matricule}}">Modifier</a>
                    <a href="{{WEBROOT}}patient/delete/{{m.matricule}}" onclick="return confirm('Voulez-vous vraiment supprimer se patient?');">Supprimer</a></td></tr>
    {% endfor %}
</table>
{% else %}
    Il n'y a aucun patient enregistr&eacute;
{% endif %}
</div>
{% endblock %}
{% block footer %}
{{parent()}}
{% endblock %}