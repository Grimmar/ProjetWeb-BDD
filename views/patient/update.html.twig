{% extends "admin.html.twig" %}

{% block title %}
{{ parent() }} - Patient
{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% endblock %}


{% block header %}
{{parent()}}
{% endblock %}

{% block body %}


{% block menu %}
{{ parent() }}
{% endblock %}
<div class="content">
    {% if patient is not null %}
    <h1>Modifier un patient</h1>
    {% else %}
    <h1>Ajouter un patient</h1>
    {% endif %}
    {% if patient is not null %}
    <form action="{{WEBROOT}}patient/updateProccess/{{matricule}}" method="post">
        {% else %}
        <form action="{{WEBROOT}}patient/addProccess" method="post">
            {% endif %}
            <fieldset>
                <legend><b>Informations</b></legend>
                <label>Nom</label>
                <input type="text" name="nom" id="login" placeholder="Nom"
                       required value="{% if patient is not null %}{{patient.nom}} {%endif %}"/>
                <br/>
                <label>Pr&eacute;nom</label>
                <input type="text" name="prenom" placeholder="Prenom" required
                       value="{% if patient is not null %}{{patient.prenom}} {%endif %}"/>
                <br/>
                <label>T&eacute;l&eacute;phone</label>
                <input type="text" name="telephone" id="telephone" placeholder="Telephone" 
                       value="{% if patient is not null %}{{patient.telephone}} {%endif %}"/>
                <br/>
                <label>Date de naissance</label>
                <input type="text" name="dtns" id="dtns" placeholder="Date de naissance" 
                       value="{% if patient is not null %}{{patient.dateNaissance}} {%endif %}"/>
                <br/> 
                <label>Numero de s&eacute;curit&eacute; sociale</label>
                <input type="text" name="secu" id="secu" placeholder="Numero de securitÃ© sociale"
                       value="{% if patient is not null %}{{patient.numeroSecu}} {%endif %}"/>
                <br/>
            </fieldset>
            <fieldset>
                <legend><b>Adresse</b></legend>
                <label>Num&eacute;ro</label>
                <input type="text" name="numero" id="numero" placeholder="Numero"
                       value="{% if patient is not null %}{{patient.adresse.numero}} {%endif %}"/>
                <br/>
                <label>Adresse</label>
                <input type="text" name="adresse" id="adresse" placeholder="Adresse"
                       value="{% if patient is not null %}{{patient.adresse.adresse}} {%endif %}"/>
                <br/>
                <label>Ville</label>
                <input type="text" name="ville" id="ville" placeholder="Ville" 
                       value="{% if patient is not null %}{{patient.adresse.ville}} {%endif %}"/>
                <br/>
                <label>Code Postal</label>
                <input type="text" name="codePostal" id="codePostal" placeholder="Code Postal"
                       value="{% if patient is not null %}{{patient.adresse.codePostal}} {%endif %}"/>
                <br/>

            </fieldset>
            
            <input type="submit" value="Valider"/>
        </form>
</div>
{% endblock %}
{% block footer %}
{{parent()}}
{% endblock %}