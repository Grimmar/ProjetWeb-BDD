{% extends "user.html.twig" %}

{% block contentTitle %}Consultation d'un patient{% endblock %} 

{% block content %}
<h3>Patient : {{patient.prenom}} {{patient.nom}}</h3>
<br/>
<a href="{{WEBROOT}}patient/update/{{patient.matricule}}">Modifier</a>
<br/>
<br/>
<table>
    <tr><td colspan="2"><b>Informations g&eacute;n&eacute;rales</b></td></tr>
    <tr><td width="250px">Nom</td><td>{{patient.nom}}</td></tr>
    <tr><td>Pr&eacute;nom</td><td>{{patient.prenom}}</td></tr>
    <tr><td>T&eacute;l&eacute;phone</td><td>{{patient.telephone}}</td></tr>
    <tr><td>Date de Naissance</td><td>{{patient.dateNaissance}}</td></tr>
    <tr><td>Numero de s&eacute;curit&eacute; sociale</td><td>{{patient.numeroSecu}}</td></tr>
    <tr><td colspan="2"><b>Adresse</b></td></tr>
    <tr><td>Numero</td><td>{{patient.adresse.numero}}</td></tr>
    <tr><td>Adresse</td><td>{{patient.adresse.adresse}}</td></tr>
    <tr><td>Ville</td><td>{{patient.adresse.ville}}</td></tr>
    <tr><td>Code Postal</td><td>{{patient.adresse.codePostal}}</td></tr>
</table>

{% endblock %}
